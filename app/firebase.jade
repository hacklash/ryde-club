				} else {
					//console.log('Authenticated w/ payload:', authData);
					//scope.uid = authData.uid;
					//scope.ref.update({})
					//scope.ref.child(authdata.uid).set({data: {z: 'z'}, list: {z: 'z'}});
					//scope.data = scope.ref.child(authdata.uid+'/data');
					//scope.list = scope.ref.child('test/list')
				}
			});

			//alert(scope.ref.getAuth());

			var listRef = new Firebase('https://brilliant-torch-5748.firebaseio.com/test/list');
			//var dataRef = new Firebase('https://brilliant-torch-5748.firebaseio.com/test/data');

			//scope.list = listRef.value();

			scope.addSchoolItemFire = function() {
				if (Object.keys(this.data).length === 4){
