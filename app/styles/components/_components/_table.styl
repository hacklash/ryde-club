/**
*
* Table
*
**/
table
  margin-top: $lineHeight
  width: 100%
  thead
    background: $colorBlue
    color: #ffffff
  th
    text-align: center
    display: none
    font-family: $fontHighlight
    type--medium()
  tr
    +medium()
      border-bottom: 1px solid white
  tbody
    background: $colorGrayBackground
  td
    display: block
    padding-top: ($lineHeight / 2)
    padding-bottom: ($lineHeight / 2)
    // This is to re-plicate the table-headers for mobile
    &::before
      content: attr(data-th) " :"
      display: inline-block
      color: #ffffff
      background: $colorBlue
      border-right: 2px solid #ffffff
      position: absolute
      top: 0
      left: 0
      bottom: 0
      width: 100px
      max-height: 100%
      font-family: $fontHighlight
      font-size: 16px
      font-weight: 400
      padding-left: ($lineHeight / 2)
      padding-top: ($lineHeight / 2)
      +medium()
        display: none
  th,
  td
    position: relative
    padding-left: 140px
    +medium()
      display: table-cell
  th
    +medium()
      padding: $lineHeight
      padding-top: 13px
      padding-bottom: ($lineHeight / 2 - 1)
  td
    +medium()
      padding: $lineHeight
      padding-bottom: ($lineHeight - 1)
td:last-child::after
  content: ""
  display: block
  background: #ffffff
  height: 1px
  left: 0
  position: absolute
  bottom: 0
  width: 100%
  +medium()
    display: none
.table-2
  col
    width: ($mediumContainer / 2)
    +wide()
      width: ($wideContainer / 2)
  th,
  td
    +medium()
      &:first-child
        border-right: 2px solid white
.table-3
  col
    width: ($mediumContainer / 3)
    +wide()
      width: ($wideContainer / 3)
  th,
  td
    +medium()
      &:nth-child(2)
        border-left: 2px solid white
        border-right: 2px solid white
.table-4
  col
    width: ($mediumContainer / 4)
    +wide()
      width: ($wideContainer / 4)
  th,
  td
    +medium()
      &:nth-child(2),
      &:nth-child(3)
        border-left: 2px solid white
        border-right: 2px solid white